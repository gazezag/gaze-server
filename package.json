{
  "name": "gaze-pages",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "license": "MIT",
  "author": {
    "name": "Ethan Teng"
  },
  "keywords": [],
  "scripts": {
    "test": "jest",
    "test:ncc": "jest --no-cache",
    "test:cover": "jest --coverage",
    "test:verbose": "jest --verbose",
    "build": "rm -rf dist && tsc",
    "start": "tsc dist/main.ts",
    "dev": "nodemon --watch src -e ts --exec ts-node src/main.ts"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/koa": "^2.13.5",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "koa": "^2.13.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "browser": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "standard",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "no-console": 0,
      "no-undef": 0
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "requirePragma": false,
    "insertPragma": false,
    "proseWrap": "preserve",
    "endOfLine": "lf"
  }
}
